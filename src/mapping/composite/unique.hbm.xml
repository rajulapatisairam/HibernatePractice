<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
<class name="com.practice.hibernate.pojo.uniquekey.UniqueKey">
 <id name="primaryKey" type="java.lang.Integer">
<generator class="native"/>
</id> 
<property name="key1" type="java.lang.String" unique-key="unique"/>
<property name="key2" type="java.lang.String" unique-key="unique"/>
<property name="name" type="java.lang.String"/>
</class>
</hibernate-mapping>